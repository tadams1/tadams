        name: "linkddr",
        id: threattype + 'linkaddr'
      });
      ilink.appendTo(l4);
      newdiv.append(l4);

      var str1 = yourname;
      if(yourname == null) {
        str1 = ""
      }

      var l5 = $('<label>').attr('for', threattype + 'yourname').text('Your name');
      var iname = $("<input>").attr({
          name: "yourname",
          id: threattype + 'yourname',
          required: true,
          value: str1
      });
      iname.appendTo(l5);
      newdiv.append(l5);
  
      var str2 = youremail;
      if(youremail == null) {
        str2 = ""
      }
      
      var l6 = $('<label>').attr('for', threattype + 'emailaddr').text('Please enter your email');
      var ename = $("<input>").attr({
          type: "email",
          name: "emailaddr",
          id: threattype + 'emailaddr',
          value: str2,
          required: true
      });
      ename.appendTo(l6)
      newdiv.append(l6);  
    
      var b=$('<input/>').attr({
          type: "submit",
          id: "save",
          value: 'Save ' + threattype,
          class: 'btn-danger'
      });
      newdiv.append(b);
  }

    $(document).on('submit','#actionfrm',function(){
      saveLocation('action');
      return false;
    })
    
    $(document).on('submit','#threatfrm',function(){
      saveLocation('threat');
      return false;
    })

    $(document).on('change','[id$="selectall"]' , function() {
      var theType = this.id.substring(0, this.id.length -9);
      removeByType(theType);
      $("." + theType + "group").prop('checked',false);
      if($(this).prop("checked")) {
        $("." + this.id.substring(0, this.id.length -9) + "group").trigger('click');
      }
    });

     $(function () {
